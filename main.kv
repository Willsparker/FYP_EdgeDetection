#:kivy 1.11.0


### Legend:
# Rules:
#  - camelCase
#  - Xs before Ys
#  - ID @ TOP, followed by size, position, info, functionality
# IDs:
#  - Buttons = btn...
#  - Labels = lbl...
#  - Text Input = txt...
#  - Grid Layout = grd
#  - Float layout = flt
#  - Slider = sldr
#  - Spinner = spnr
#  - CheckBox = cb


<Root>:
    #Overall Window
    BoxLayout:
        orientation: 'vertical'
        # Top Button Panel
        BoxLayout:
            size_hint_x: 0.35
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                font_size: 20
                on_release: root.show_load(1)
            Button:
                text: 'Save'
                font_size: 20
                on_release: root.show_save()
            Button:
                text: 'Undo'
                font_size: 20
                on_release: root.undoTransform()
            Spinner:
                id: spnrPreset
                size_hint_x: 3
                text: 'Preset Filters'
                values: [ "Identity", "Sobel_X", "Sobel_Y", "Gaussian Blur 3x3", "Gaussian Blur 5x5", "Average Filter 3x3", "Average Filter 5x5"]
                font_size: 20
                on_text: root.on_spinner_change(self.text)
            Button:
                text: "Blend"
                font_size: 20
                on_release: root.show_load(2)

        # Image Viewer + Options Menu
        FloatLayout:
            Image:
                id: imgInput
                size_hint: (0.5,0.75)
                pos_hint: {'x': 0, 'y': 0.25}
                source: ''
                allow_stretch: True
            Label:
                id: lblInfo
                size_hint: (0.5,0.25)
                pos_hint: {'y': 0.0 , 'x': 0}
                text: "Information Area"
                font_size: 25

            # Options Menu
            FloatLayout:
                size_hint: (0.5,1)
                pos_hint: {'x':.5}
                orientation:'vertical'
                TextInput:
                    id: txtMatrixCoeff
                    size_hint: (.15,.1)
                    pos_hint:{'x':.05, 'y':0.70}
                    text: "1"
                    font_size: 30
                GridLayout:
                    id: grdUsrMatrix
                    size_hint: (.60,.5)
                    pos_hint: {'x':.22, 'y':0.5}
                Slider:
                    id: sldrMatrixSize
                    size_hint: (0.1,0.35)
                    pos_hint: {'x':0.90, 'y':0.50}
                    min: 1
                    max: 7
                    step: 2
                    value: 3
                    value_track: True
                    value_track_color: [1,0,0,1]
                    orientation: 'vertical'
                    on_touch_move: root.initialiseGrid(int(self.value))
                CheckBox:
                    id: cbGrey
                    size_hint: (0.05,0.05)
                    pos_hint: {'x':.25, 'y':0.4}
                    active: False
                Label:
                    text: "Greyscale:"
                    size_hint: (0.05,0.05)
                    pos_hint: {'x':.45, 'y':0.4}
                    font_size: 20
                CheckBox:
                    id: cbAlpha
                    size_hint: (0.05,0.05)
                    pos_hint: {'x':.10, 'y':0.3}
                    active: True
                Label:
                    size_hint: (0.05,0.05)
                    pos_hint: {'x':.45, 'y':0.3}
                    text: "Remove black/whitespace:"
                    font_size: 20
                Label:
                    size_hint: (0.75,0.1)
                    pos_hint: {'x':0.15, 'y':0.20}
                    text: "Matrix size: " + str(int(sldrMatrixSize.value))
                    font_size: 20
                Label:
                    size_hint: (0.75,0.1)
                    pos_hint: {'x':0.15, 'y':0.10}
                    text: "Blend levels: " + str(int(sldrBlendVal.value))
                    font_size: 20
                Slider:
                    id: sldrBlendVal
                    size_hint: (0.75,0.1)
                    pos_hint: {'x':0.15, 'y':0.05}
                    min: 1
                    max: 100
                    value: 50
                    orientation: 'horizontal'
                Button:
                    size_hint: (0.15,0.07)
                    pos_hint: {'x':0.0, 'y':0.10}
                    text: 'Apply mask'
                    on_release: root.applyTransform()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './images'                   # Starts with current path

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './images/'
            on_selection: txtUserInput.text = self.selection and self.selection[0] or ''

        TextInput:
            id: txtUserInput
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, txtUserInput.text)