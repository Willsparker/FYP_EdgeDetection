#:kivy 1.11.0

<Root>:
    #Overall Window
    BoxLayout:
        orientation: 'vertical'
        # Top Button Panel
        BoxLayout:
            size_hint_y: None
            size_hint_x: 0.35
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                on_release: root.show_save()
            Button:
                text: 'Test'
                on_release: root.applyTransform()
            Button:
                text: 'Undo'
                on_release: root.undoTransform()
            Button:
                text: 'Preset Filters'
                on_release: root.createPopup("TO DO: Put this in")
                # Larger button needed for bigger text
                size_hint_x: 2

        # Image Viewer + Options Menu
        BoxLayout:
            Image:
                id: image_input
                source: ''
                allow_stretch: True
            # Options Menu
            FloatLayout:
                orientation:'vertical'
                # User defined matrix
                pos_hint: {'x':.5}
                TextInput:
                    id: matrixCoeff
                    text: "1"
                    font_size: 20
                    pos_hint:{'x':.07, 'y':0.70}
                    size_hint: (.15,.1)
                GridLayout:
                    id: userMatrix
                    pos_hint: {'x':.25, 'y':0.5}
                    size_hint: (.75,.5)
                CheckBox:
                    id: greyCheck
                    active: False
                    pos_hint: {'x':.25, 'y':0.4}
                    size_hint: (0.05,0.05)
                Label:
                    id: greyCheckLabel
                    text: "Greyscale?"
                    pos_hint: {'x':.45, 'y':0.4}
                    size_hint: (0.05,0.05)
                Slider:
                    id: matrixSlider
                    min: 1
                    max: 7
                    step: 2
                    value: 3
                    value_track: True
                    orientation: 'horizontal'
                    on_value: root.fillGrid(int(self.value))
                    pos_hint: {'x':0.15, 'y':0.15}
                    size_hint: (0.75,0.1)
                    


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '.'                   # Starts with current path

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './images/'
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)