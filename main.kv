#:kivy 1.11.0
<Root>:
    #Overall Window
    BoxLayout:
        orientation: 'vertical'
        # Top Button Panel
        BoxLayout:
            size_hint_y: None
            size_hint_x: 0.35
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load(1)
            Button:
                text: 'Save'
                on_release: root.show_save()
            Button:
                text: 'Test'
                on_release: root.applyTransform()
            Button:
                text: 'Undo'
                on_release: root.undoTransform()
            Spinner:
                id: presetSpinner
                text: 'Preset Filters'
                values: ["Identity", "Sobel_X", "Sobel_Y", "Gaussian Blur 3x3", "Gaussian Blur 5x5", "Average Filter 3x3", "Average Filter 5x5"]
                size_hint_x: 3
                on_text: root.on_spinner_change(self.text)
            Button:
                text: "Blend"
                on_release: root.show_load(2)

        # Image Viewer + Options Menu
        FloatLayout:
            Image:
                id: image_input
                source: ''
                allow_stretch: True
                pos_hint: {'x': 0, 'y': 0.25}
                size_hint: (0.5,0.75)
            Label:
                id: lblInfo
                text: "Information Area"
                pos_hint: {'y': 0.0 , 'x': 0}
                size_hint: (0.5,0.25)
                font_size: 25
            # Options Menu
            FloatLayout:
                orientation:'vertical'
                # User defined matrix
                pos_hint: {'x':.5}
                size_hint: (0.5,1)
                TextInput:
                    id: matrixCoeff
                    text: "1"
                    font_size: 20
                    pos_hint:{'x':.07, 'y':0.70}
                    size_hint: (.15,.1)
                GridLayout:
                    id: userMatrix
                    pos_hint: {'x':.25, 'y':0.5}
                    row: 3
                    col: 3
                    size_hint: (.75,.5)
                CheckBox:
                    id: greyCheck
                    active: False
                    pos_hint: {'x':.25, 'y':0.4}
                    size_hint: (0.05,0.05)
                Label:
                    id: greyCheckLabel
                    text: "Greyscale?"
                    pos_hint: {'x':.45, 'y':0.4}
                    size_hint: (0.05,0.05)
                    font_size: 20
                CheckBox:
                    id: cbAlpha
                    active: True
                    pos_hint: {'x':.10, 'y':0.3}
                    size_hint: (0.05,0.05)
                Label:
                    id: lblAlpa
                    text: "Remove black/whitespace?"
                    pos_hint: {'x':.45, 'y':0.3}
                    size_hint: (0.05,0.05)
                    font_size: 20
                Label:
                    id: lblMatrixVal
                    text: "Matrix size: " + str(int(matrixSlider.value))
                    pos_hint: {'x':0.15, 'y':0.20}
                    size_hint: (0.75,0.1)
                    font_size: 20
                Slider:
                    id: matrixSlider
                    min: 1
                    max: 7
                    step: 2
                    value: 3
                    value_track: True
                    orientation: 'horizontal'
                    on_touch_move: root.initialiseGrid(int(self.value))
                    pos_hint: {'x':0.15, 'y':0.15}
                    size_hint: (0.75,0.1)
                Label:
                    id: lblBlendVal
                    text: "Blend levels: " + str(int(blendSlider.value))
                    pos_hint: {'x':0.15, 'y':0.10}
                    size_hint: (0.75,0.1)
                    font_size: 20
                Slider:
                    id: blendSlider
                    pos_hint: {'x':0.15, 'y':0.05}
                    size_hint: (0.75,0.1)
                    orientation: 'horizontal'
                    min: 1
                    max: 100
                    value: 50                    
                    


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '.'                   # Starts with current path

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './images/'
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)